<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sty="using:FluentAvalonia.Styling"
             xmlns:checadorComunicacion="clr-namespace:ChecadorComunicacion"
             x:Class="ChecadorComunicacion.App"
             RequestedThemeVariant="Light">

    <Application.DataTemplates>
        <checadorComunicacion:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <FontFamily x:Key="SegoeFluentIconsFont">
            avares://ChecadorComunicacion/Assets/Fonts/SegoeIcons.ttf#Segoe Fluent Icons
        </FontFamily>

        <SolidColorBrush x:Key="PrimaryBlue" Color="#043356" />
        <SolidColorBrush x:Key="SecondaryBlue" Color="#0c7fda" />
        <SolidColorBrush x:Key="LightBlue" Color="#E3F2F9" />
        <SolidColorBrush x:Key="AccentBlue" Color="#046B99" />
        <SolidColorBrush x:Key="DarkBlue" Color="#021F2D" />
        <SolidColorBrush x:Key="ElegantBlack" Color="#131312" />
        <SolidColorBrush x:Key="ElegantBlue" Color="#023E8A" />
        <SolidColorBrush x:Key="HoverBlue" Color="#e9f5fe" />
        <SolidColorBrush x:Key="TextOnBlue" Color="#F8FAFC" />
        <SolidColorBrush x:Key="SecondaryText" Color="#64748B" />
        <SolidColorBrush x:Key="BackgroundGray" Color="#F8FAFC" />
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF" />
        <SolidColorBrush x:Key="PrimaryForeground" Color="#F8FAFC" />

        <ControlTheme x:Key="NavigationButtonTheme" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="Margin" Value="8,4" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                </ControlTemplate>
            </Setter>

            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{StaticResource HoverBlue}" />
                <Setter Property="Cursor" Value="Hand" />
            </Style>

            <Style Selector="^:selected">
                <Setter Property="Background" Value="{StaticResource SecondaryBlue}" />
            </Style>

            <Style Selector="^:selected:pointerover">
                <Setter Property="Background" Value="{StaticResource SecondaryBlue}" />
            </Style>
        </ControlTheme>

        <ControlTheme x:Key="TopBarButtonTheme" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter>

            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{StaticResource LightBlue}" />
                <Setter Property="Cursor" Value="Hand" />
            </Style>

            <Style Selector="^:pressed">
                <Setter Property="Background" Value="#bfdbfe" />
            </Style>
        </ControlTheme>

        <ControlTheme x:Key="CloseButtonTheme" TargetType="Button" BasedOn="{StaticResource TopBarButtonTheme}">
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#fee2e2" />
                <Setter Property="Cursor" Value="Hand" />
            </Style>

            <Style Selector="^:pressed">
                <Setter Property="Background" Value="#fecaca" />
            </Style>
        </ControlTheme>
    </Application.Resources>

    <Application.Styles>
        <sty:FluentAvaloniaTheme PreferUserAccentColor="True" />
        <StyleInclude Source="avares://ChecadorComunicacion/Assets/Icons.axaml" />

        <Style Selector="TextBlock.PageTitle">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}" />
        </Style>

        <Style Selector="TextBlock.Subtitle">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="Foreground" Value="#cbd5e1" />
        </Style>

        <Style Selector="Border.MainCard">
            <Setter Property="Background" Value="{StaticResource CardBackground}" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="BoxShadow" Value="0 1 3 0 #0000001a, 0 1 2 0 #0000000f" />
        </Style>

        <Style Selector="Border.TopBar">
            <Setter Property="Background" Value="{StaticResource CardBackground}" />
            <Setter Property="Height" Value="64" />
            <Setter Property="BoxShadow" Value="0 1 3 0 #0000001a" />
        </Style>

        <Style Selector="Label.Icon">
            <Setter Property="FontFamily" Value="{StaticResource SegoeFluentIconsFont}" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

    </Application.Styles>
</Application>