<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
             xmlns:viewModels="clr-namespace:ChecadorComunicacion.ViewModels"
             x:DataType="viewModels:PersonasViewModel"
             x:Class="ChecadorComunicacion.Views.PersonasView">

    <UserControl.DataContext>
        <viewModels:PersonasViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Panel superior con formulario -->
        <Grid Grid.Row="0" ColumnDefinitions="2*,200" Margin="10">

            <!-- Formulario -->
            <StackPanel Grid.Column="0" Spacing="10">
                <TextBox Text="{Binding Nombre}"
                         Watermark="Nombre *"
                         FontSize="14" />

                <TextBox Text="{Binding Apellido}"
                         Watermark="Apellido *"
                         FontSize="14" />

                <TextBox Text="{Binding Matricula}"
                         Watermark="Matrícula *"
                         FontSize="14" />

                <ComboBox ItemsSource="{Binding TiposPersona}"
                          SelectedItem="{Binding TipoPersona}"
                          FontSize="14"
                          PlaceholderText="Seleccionar tipo *" />

                <!-- Botones de acción -->
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                    <Button Content="Agregar"
                            Command="{Binding AgregarCommand}"
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="15,8" />

                    <Button Content="Actualizar"
                            Command="{Binding ActualizarCommand}"
                            Background="#2196F3"
                            Foreground="White"
                            Padding="15,8" />

                    <Button Content="Eliminar"
                            Command="{Binding EliminarCommand}"
                            Background="#F44336"
                            Foreground="White"
                            Padding="15,8" />

                    <Button Content="Limpiar"
                            Command="{Binding LimpiarCommand}"
                            Background="#9E9E9E"
                            Foreground="White"
                            Padding="15,8" />
                </StackPanel>
            </StackPanel>

            <!-- Panel de imagen -->
            <Border Grid.Column="1"
                    Margin="20,0,0,0"
                    BorderBrush="#E0E0E0"
                    BorderThickness="2"
                    CornerRadius="8"
                    Background="#F5F5F5">

                <StackPanel Spacing="10" Margin="10">
                    <!-- Preview de la imagen -->
                    <Border Height="150"
                            Background="White"
                            CornerRadius="4"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Grid>
                            <Image Source="{Binding FotoPreview}"
                                   Stretch="Uniform"
                                   IsVisible="{Binding TieneFoto}" />

                            <TextBlock Text="Sin imagen"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#9E9E9E"
                                       FontStyle="Italic"
                                       IsVisible="{Binding !TieneFoto}" />
                        </Grid>
                    </Border>

                    <!-- Botones de imagen -->
                    <StackPanel Spacing="5">
                        <Button Content="Seleccionar Imagen"
                                Command="{Binding SeleccionarImagenCommand}"
                                HorizontalAlignment="Stretch"
                                Background="#FF9800"
                                Foreground="White"
                                FontSize="12" />

                        <Button Content="Limpiar Imagen"
                                Command="{Binding LimpiarImagenCommand}"
                                HorizontalAlignment="Stretch"
                                Background="#757575"
                                Foreground="White"
                                FontSize="12"
                                IsVisible="{Binding TieneFoto}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Lista de personas -->
        <Border Grid.Row="1"
                Margin="10,0,10,10"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8">

            <DataGrid ItemsSource="{Binding Personas}"
                      SelectedItem="{Binding PersonaSeleccionada}"
                      AutoGenerateColumns="False"
                      CanUserReorderColumns="True"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="True"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      IsReadOnly="True">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding Id}"
                                        Width="60" />

                    <DataGridTextColumn Header="Nombre"
                                        Binding="{Binding Nombre}"
                                        Width="150" />

                    <DataGridTextColumn Header="Apellido"
                                        Binding="{Binding Apellido}"
                                        Width="150" />

                    <DataGridTextColumn Header="Matrícula"
                                        Binding="{Binding Matricula}"
                                        Width="120" />

                    <DataGridTextColumn Header="Tipo"
                                        Binding="{Binding TipoPersona}"
                                        Width="120" />

                    <DataGridTemplateColumn Header="Foto" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#E8F5E8"
                                        CornerRadius="12"
                                        Padding="8,4"
                                        HorizontalAlignment="Center">
                                    <Grid>
                                        <TextBlock Text="✓"
                                                   Foreground="#4CAF50"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   IsVisible="{Binding RutaFoto, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                        <TextBlock Text="✗"
                                                   Foreground="#F44336"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   IsVisible="{Binding RutaFoto, Converter={x:Static StringConverters.IsNullOrEmpty}}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>

</UserControl>