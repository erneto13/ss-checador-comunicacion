<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ChecadorComunicacion.ViewModels"
        mc:Ignorable="d" WindowState="Maximized" CanResize="False"
        WindowStartupLocation="CenterOwner"
        x:Class="ChecadorComunicacion.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Hulla Pascal - Comunicación URN"
        Icon="../Assets/icono-huella-uas.png"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        SystemDecorations="None">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>


    <Grid>
        <SplitView IsPaneOpen="True"
                   DisplayMode="Inline"
                   OpenPaneLength="300"
                   PaneBackground="{StaticResource PrimaryBlue}">

            <SplitView.Pane>
                <Grid RowDefinitions="Auto, *">

                    <Border Grid.Row="0" Padding="24,20" Background="{StaticResource DarkBlue}">
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <Border Background="White"
                                    CornerRadius="8"
                                    Padding="8"
                                    VerticalAlignment="Center">
                                <Image Source="../Assets/logo_pascal_huella.png"
                                       Width="32" Height="32" />
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Hulla Pascal"
                                           FontWeight="Bold"
                                           FontSize="18"
                                           Foreground="{StaticResource TextOnBlue}" />
                                <TextBlock Text="Comunicación URN"
                                           Classes="Subtitle" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Row="1" Padding="16,24,16,0">
                        <ListBox ItemsSource="{Binding Items}"
                                 SelectedItem="{Binding SelectedListItem}"
                                 Background="Transparent"
                                 BorderThickness="0">

                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:ListItemTemplate}">
                                    <StackPanel Spacing="16" Orientation="Horizontal">
                                        <PathIcon Data="{Binding ListItemIcon}"
                                                  Width="22" Height="22"
                                                  Foreground="{StaticResource TextOnBlue}" />
                                        <TextBlock Text="{Binding Label}"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource TextOnBlue}"
                                                   FontSize="15"
                                                   FontWeight="Medium" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>

                            <ListBox.ItemContainerTheme>
                                <StaticResource ResourceKey="NavigationButtonTheme" />
                            </ListBox.ItemContainerTheme>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid RowDefinitions="Auto, *">

                    <Border Grid.Row="0" Classes="TopBar">
                        <Grid ColumnDefinitions="Auto, *, Auto, Auto">

                            <Button Grid.Column="0"
                                    Theme="{StaticResource TopBarButtonTheme}"
                                    Margin="16,0,0,0"
                                    VerticalAlignment="Center">
                                <PathIcon Data="{StaticResource LineHorizontalRegular}"
                                          Width="20" Height="20"
                                          Foreground="{StaticResource SecondaryText}" />
                            </Button>

                            <Button Grid.Column="2"
                                    Click="MinimizeApp_Click"
                                    ToolTip.Tip="Minimizar"
                                    Margin="4,0">
                                <PathIcon Data="{StaticResource MinimizeRegular}" />
                            </Button>

                            <Button Grid.Column="3"
                                    Click="CloseApp_Click"
                                    ToolTip.Tip="Cerrar"
                                    Margin="4,0,16,0">
                                <PathIcon Data="{StaticResource CloseIcon}"
                                          Foreground="#dc2626" />
                            </Button>

                        </Grid>
                    </Border>

                    <Border Grid.Row="1"
                            Margin="0"
                            Background="{StaticResource BackgroundGray}">
                        <ScrollViewer>
                            <Border Classes="MainCard"
                                    Margin="24">
                                <TransitioningContentControl Content="{Binding CurrentPage}"
                                                             Margin="32,24" />
                            </Border>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>

</Window>