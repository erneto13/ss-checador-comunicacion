<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ChecadorComunicacion.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:ChecadorViewModel"
             x:Class="ChecadorComunicacion.Views.ChecadorView">
    
    <UserControl.DataContext>
        <vm:ChecadorViewModel />
    </UserControl.DataContext>
    
    <!-- Contenedor principal con padding -->
    <StackPanel Margin="40" Spacing="30" HorizontalAlignment="Center">

        <!-- Reloj digital -->
        <Border Background="White"
                CornerRadius="15"
                Padding="40,20"
                BoxShadow="0 4 20 0 #20000000">
            <StackPanel HorizontalAlignment="Center" Spacing="5">
                <TextBlock Text="{Binding TiempoActual}"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center" />
                <TextBlock Text="{Binding FechaActual}"
                           FontSize="16"
                           Foreground="#7F8C8D"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Área de información de la persona -->
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                BoxShadow="0 4 20 0 #20000000"
                MinWidth="400">
            <StackPanel Spacing="20" HorizontalAlignment="Center">

                <!-- Placeholder circular para foto -->
                <Border Width="120"
                        Height="120"
                        Background="#BDC3C7"
                        CornerRadius="60"
                        HorizontalAlignment="Center">
                    <TextBlock Text="👤"
                               FontSize="40"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>

                <!-- Información de la persona -->
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding NombreCompleto}"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center" />

                    <TextBlock Text="{Binding Matricula}"
                               FontSize="16"
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Información del último checador -->
                <Border Background="#ECF0F1"
                        CornerRadius="10"
                        Padding="20,15">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Último registro:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E" />

                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Fecha:"
                                       FontSize="12"
                                       Foreground="#7F8C8D"
                                       Margin="0,0,10,0" />
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="{Binding FechaUltimoChecador}"
                                       FontSize="12"
                                       Foreground="#2C3E50" />

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Hora:"
                                       FontSize="12"
                                       Foreground="#7F8C8D"
                                       Margin="0,0,10,0" />
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       Text="{Binding HoraUltimoChecador}"
                                       FontSize="12"
                                       Foreground="#2C3E50" />

                            <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="2"
                                    Background="#3498DB"
                                    CornerRadius="12"
                                    Padding="12,6"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding TipoAccionAnterior}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           HorizontalAlignment="Center" />
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Próxima acción -->
                <StackPanel Spacing="10" HorizontalAlignment="Center">
                    <TextBlock Text="Próxima acción:"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#34495E"
                               HorizontalAlignment="Center" />

                    <Border Background="#E74C3C"
                            CornerRadius="20"
                            Padding="20,10">
                        <TextBlock Text="{Binding ProximoTipoAccion}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center" />
                    </Border>
                </StackPanel>

                <!-- Botón de registrar -->
                
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>