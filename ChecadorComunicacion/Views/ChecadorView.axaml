<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ChecadorComunicacion.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="850"
             x:DataType="vm:ChecadorViewModel"
             x:Class="ChecadorComunicacion.Views.ChecadorView">

    <UserControl.DataContext>
        <vm:ChecadorViewModel />
    </UserControl.DataContext>

    <StackPanel Margin="40" Spacing="30" HorizontalAlignment="Center">

        <!-- Reloj -->
        <Border Background="White"
                CornerRadius="15"
                Padding="40,20"
                BoxShadow="0 4 20 0 #20000000">
            <StackPanel HorizontalAlignment="Center" Spacing="5">
                <TextBlock Text="{Binding TiempoActual}"
                           FontSize="48"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center" />
                <TextBlock Text="{Binding FechaActual}"
                           FontSize="16"
                           Foreground="#7F8C8D"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Panel principal -->
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                BoxShadow="0 4 20 0 #20000000"
                MinWidth="400">
            <StackPanel Spacing="20" HorizontalAlignment="Center">

                <!-- Entrada de matrícula (siempre visible) -->
                <StackPanel Spacing="15" HorizontalAlignment="Center">
                    <TextBlock Text="Ingresa tu matrícula:"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#34495E"
                               HorizontalAlignment="Center" />

                    <Border Background="#ECF0F1"
                            CornerRadius="25"
                            Padding="20,15"
                            BorderBrush="#BDC3C7"
                            BorderThickness="2">
                        <TextBox Name="MatriculaTextBox"
                                 Text="{Binding MatriculaInput}"
                                 Watermark="Escribe tu matrícula aquí"
                                 Width="250"
                                 FontSize="18"
                                 HorizontalAlignment="Center"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 HorizontalContentAlignment="Center">
                            <TextBox.KeyBindings>
                                <KeyBinding Gesture="Enter" Command="{Binding ProcesarMatriculaCommand}" />
                            </TextBox.KeyBindings>
                        </TextBox>
                    </Border>

                    <Button Content="Checar"
                            Command="{Binding ProcesarMatriculaCommand}"
                            Background="#3498DB"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Padding="30,12"
                            CornerRadius="25"
                            HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Mensaje de estado -->
                <TextBlock Text="{Binding MensajeEstado}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#E74C3C"
                           HorizontalAlignment="Center"
                           IsVisible="{Binding MensajeEstado, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

                <!-- Información de la persona (solo visible cuando se encuentra) -->
                <StackPanel Spacing="20"
                            HorizontalAlignment="Center"
                            IsVisible="{Binding MostrarDatos}">

                    <!-- Avatar y datos personales -->
                    <StackPanel Spacing="15" HorizontalAlignment="Center">

                        <!-- Imagen de la persona o placeholder -->
                        <Border Width="120"
                                Height="120"
                                CornerRadius="60"
                                BorderBrush="#27AE60"
                                BorderThickness="3"
                                HorizontalAlignment="Center"
                                ClipToBounds="True">
                            <Grid>
                                <!-- Imagen cuando existe -->
                                <Image Source="{Binding FotoPersona}"
                                       Stretch="UniformToFill"
                                       IsVisible="{Binding TieneFoto}" />

                                <!-- Placeholder cuando no hay imagen -->
                                <Border Background="#27AE60"
                                        IsVisible="{Binding !TieneFoto}">
                                    <Grid>
                                        <!-- Icono de persona -->
                                        <TextBlock Text="👤"
                                                   FontSize="40"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />

                                        <!-- Check mark superpuesto -->
                                        <Border Background="#27AE60"
                                                Width="35"
                                                Height="35"
                                                CornerRadius="17.5"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Margin="0,0,5,5"
                                                BorderBrush="White"
                                                BorderThickness="2">
                                            <TextBlock Text="✓"
                                                       FontSize="16"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       FontWeight="Bold" />
                                        </Border>
                                    </Grid>
                                </Border>

                                <Border
                                    Width="35"
                                    Height="35"
                                    CornerRadius="17.5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,5,5"
                                    BorderBrush="White"
                                    BorderThickness="2"
                                    IsVisible="{Binding TieneFoto}">
                                    <TextBlock Text="✓"
                                               FontSize="16"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="Bold" />
                                </Border>
                            </Grid>
                        </Border>

                        <StackPanel Spacing="8" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding NombreCompleto}"
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Foreground="#2C3E50"
                                       HorizontalAlignment="Center" />

                            <TextBlock Text="{Binding Matricula}"
                                       FontSize="16"
                                       Foreground="#7F8C8D"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>